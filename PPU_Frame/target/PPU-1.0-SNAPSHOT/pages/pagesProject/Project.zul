<zk xmlns:ca="client/attribute">
    <window
            id="mainWindow"
            apply="org.zkoss.bind.BindComposer"
            viewModel="@id('vm') @init('com.PPU.vm.MainPageController')"
            onClientInfo='@command("updateDeviceStatus", orient=event.orientation, width=event.desktopWidth)'
            height="100%" width="100%" >

		<style src="../../css/desktop.css.dsp" />

        <style>
            .contentPanel table.z-caption
            {
            width:30%;
            font-size: 12px;
            }
        </style>

        <div
                sclass="modal"
                visible="@load(vm.modalShow)"
                onClick='@command("hideModal")'>
        </div>

        <div id="handler" style="width : 100; height : 100">

        </div>
        <!--  -->

        <caption>
            <include src="/pages/include/titlebar.zul" />
        </caption>

        <!-- Divide the main layout into Menu Panel and Content Panel -->
        <borderlayout
                animationDisabled="true">

            <!-- Menu Panel -->
            <west
                    sclass="menuPanel"
                    ca:data-swipeable="true"
                    autoscroll="true"
                    collapsible="true"
                    open="@bind(vm.menuOpen)"
                    >

                <!-- Provide a way to access zkdemo -->
                <caption>

                </caption>
                <!-- -->

                <include src="/pages/include/navigation.zul" />
            </west>
            <!--  -->

            <!-- Content Panel -->
            <center
                    id="contentPanel"
                    sclass="contentPanel"
                    border="0"
                    hflex="1"
                    onSwipe='@command("contentSwipe", dir=event.swipeDirection)'>

                <!-- Title Bar -->

                <!--  -->

                <!-- Content Area -->
                <borderlayout>
                    <!-- Newsfeed Panel  -->
                    <center
                            sclass="newsfeedPanel"
                            autoscroll="true" >

                        <!-- Toolbar -->
                        <caption>
                            <include src="/pages/include/toolbar.zul" />
                        </caption>
                        <!--  -->

                        <!-- Newsfeed Posts -->
                        <div>
                            <vlayout>
                                <zk xmlns:n="native">

                                    <div apply="org.zkoss.bind.BindComposer"
                                            viewModel="@id('vm') @init('com.PPU.windowControllers.PageProject.GetProject')"
                                            height="100%" width="100%" >

                                    <zscript>
                                        <![CDATA[
										import com.PPU.DB.tables.*;
										import com.PPU.DB.workLogic.*;
										import com.PPU.vm.*;

										int idMz = new Integer(execution.getParameter("id"));
										vm.setId(new Integer(execution.getParameter("id")));
                                   ]]>
                                    </zscript>

                                    <div height="30px"></div>

                                    <label value="@load(vm.projectName)" style="font-size: 26px;" />
                                    <n:hr />


                                    <div style="margin: 20px 0;
                                    padding: 15px 30px 15px 15px;
                                    border-left: 5px solid #eee;background-color: #f0f7fd;
                                    border-color: #d0e3f0; ">
                                        <label value="@load(vm.program)" />
                                        <n:br />
                                        <label value="@load(vm.nameLevel)" />
                                        <n:br />
                                        <label value="@load(vm.notWorkString)" />
                                        <n:br />
                                        <label value="@load(vm.statusName)" />
                                    </div>

                                    <panel width="100%" border="normal"
                                           title="Редактирование и просмотр">
                                        <panelchildren>

                                            <div style="width:100%">
                                                <jasperreport id="report" height="0px" style="display: none;" />
                                                <hlayout style="margin-left: 63%;" >
                                                    <button id="showTimeline" onClick='@command("showTimeline")' label="Временная линия проекта" style='height: 38px;' />
                                                    <button id="showReport" image="/images/tollbar/report2.png" onClick='@command("showReport")' label="Получить отчет по Проекту" />
                                                </hlayout>
                                            </div>

                                            <grid sclass="loginGrid">
                                                <columns>
                                                    <column width="50%" />
                                                    <column width="50%" />
                                                </columns>
                                                <rows>
                                                    <row>Название : <textbox id="name" value="@bind(vm.project.name)" cols="30" disabled="${((vm.level == 1) || (vm.level == 0) || (vm.level == 3)) ? false : true}" /></row>
                                                    <row>Дата начала : <datebox id="startDate" value="@bind(vm.project.startDate)" cols="12" format="short" disabled="${((vm.level == 1) ||(vm.level == 0) || (vm.level == 3)) ? false : true}"/></row>
                                                    <row>Дата окончания : <datebox id="expirationDate" value="@bind(vm.project.expirationDate)" cols="12" format="short" disabled="${((vm.level == 1) || (vm.level == 0) || (vm.level == 3)) ? false : true}"/></row>
                                                    <row>Описание : <textbox id="description" value="@bind(vm.project.description)" rows="6" disabled="${((vm.level == 2) || (vm.level == 3) || (vm.level == 0)) ? false : true}"/></row>
                                                    <row>Потребитель муниципальной услуги : <textbox id="consumers" value="@bind(vm.project.consumers)" rows="6" disabled="${((vm.level == 2) || (vm.level == 3) || (vm.level == 0)) ? false : true}"/></row>
                                                    <row>Бюджет : <doublespinner id="budget" value="@bind(vm.project.budget)" cols="12" disabled="${((vm.level == 2) || (vm.level == 3) || (vm.level == 0)) ? false : true}"/></row>

                                                    <row>
                                                        <cell colspan="2">
                                                            <groupbox >
                                                                <caption label="Руководитель муниципального задания" />
                                                                <hbox>
                                                                    <ObjectListBox objs="${vm.allLeader}" selectedObjs="${vm.leaders}"
                                                                                   id="leaderProject1" mold="paging" hflex="1" vflex="true" rows="8" load="true"/>
                                                                </hbox>
                                                            </groupbox>
                                                        </cell>

                                                    </row>

                                                    <row>
                                                        <cell colspan="2">
															<groupbox >
															<caption label="Команда, выполняющая Проекту" />
																<hbox>
                                                                    <vlayout>
                                                                        <dualObjectListBox worker="WorkWithComandProject" rightList="@bind(vm.comandProject)"  disabled="${((vm.level == 2) || (vm.level == 3)) ? false : true}"
                                                                                           id="comandProject1"   load="true" />

                                                                        <groupbox mold="3d" width="100%" style="margin-top: 100px;" open="false">
                                                                        <caption label="Исполнители закончившие выполнение муниципального задания" />

                                                                            <grid id="endCommand" model="@bind(vm.getEndCommandProject())">
                                                                                <columns>
                                                                                    <column hflex="1" >Название</column>
                                                                                    <column hflex="1" >Тип учреждения</column>
                                                                                    <column hflex="1" >Вернуть на выполнение</column>
                                                                                </columns>
                                                                                <rows>
                                                                                    <template name="model">
                                                                                        <row>
                                                                                            <label value="${each.getPartnerProject().name}" />
                                                                                            <label value="${each.getPartnerProject().getTypesMU().name}" />

                                                                                                <buttonOpenList label="Вернуть" obj="${each}" >
                                                                                                    <attribute name="onClick">   <![CDATA[
                                                                                                        vm.revertPartnerComandInWork(self.getObj());
                                                                                                        endCommand.setModel(vm.getEndCommandProject());
                                                                                               ]]>  </attribute>
                                                                                                </buttonOpenList>
                                                                                        </row>
                                                                                    </template>
                                                                                </rows>
                                                                            </grid>

                                                                        </groupbox>
                                                                    </vlayout>
																</hbox>
															</groupbox>
                                                        </cell>

                                                    </row>

                                                    <row>
                                                        <cell colspan="2">
															<groupbox >
															<caption label="Программа" />
																<hbox>
																	<ObjectListBox objs="${vm.programs}" selectedObjs="${vm.program1[0]}"
																				   id="program2" mold="paging" hflex="1" vflex="true" rows="8" load="true"/>
																</hbox>
															</groupbox>

                                                        </cell>

                                                    </row>

													<!--<row>Тип муниципального задания :-->

														<!--<combobox id="typeService1" disabled="${((vm.level == 0) || (vm.level == 1)) ? false : true}">-->

															<!--<zk forEach="${vm.listTypeService}" >-->
																<!--<comboitem label="${each.name}">-->

																	<!--<zscript>-->
																		<!--<![CDATA[-->
																		  <!--import com.PPU.DB.tables.*;-->
																		  <!--import com.PPU.DB.workLogic.*;-->
																		  <!--import com.PPU.vm.*;-->

																		  <!--if (each.name.equals(vm.typeServiceProject))-->
