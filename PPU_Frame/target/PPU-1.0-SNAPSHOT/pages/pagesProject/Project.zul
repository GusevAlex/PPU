                                                <!--<tabs>-->
                                                    <!--<tab label="Лимиты" />-->
                                                    <!--<tab label="Параметры" />-->
                                                    <!--<tab label="Ресурсы МЗ" />-->
                                                <!--</tabs>-->
                                                    <!--<tabpanels>-->
                                                        <!--<tabpanel>-->

                                                    <!--Лимиты-->
                                                    <row><cell colspan="2">

														<groupbox >
															<caption label="Лимиты" />
															<hbox>
                                                                <vlayout>
                                                                    <toolbar style="margin-bottom: -5px;">
                                                                        <toolbarbutton image="/images/tollbar/document_add.png" tooltiptext="Добавить новое ограничение" onClick='@command("onAddNewLimitByList")' disabled="${(vm.level == 4) ? false : true}" />
                                                                        <toolbarbutton image="/images/tollbar/edit.gif" tooltiptext="Добавить новое ограничение, уже имеющее значение" onClick='@command("onAddOldLimitByList")' disabled="${(vm.level == 4) ? false : true}"  />
                                                                        <toolbarbutton image="/images/tollbar/add-button.png" tooltiptext="Добавить новый параметр" onClick='@command("onAddNewParam")' disabled="${(vm.level == 4) ? false : true}"  />
                                                                    </toolbar>
                                                                    <grid id="limitsProject1" model="@bind(vm.limitModelList)" >
                                                                        <columns>
                                                                            <column hflex="1" label="Параметр" align="left" />
                                                                            <column hflex="1" label="Значение" align="left" />
                                                                        </columns>
                                                                        <rows>
                                                                            <template name="model">
                                                                                <row>
                                                                                    <label value="${each.getParametr().getName()}" />
                                                                                    <myTextBox obj="${each}" value="@bind(self.obj.value)" disabled="${(vm.level == 4) ? false : true}"  />
                                                                                </row>
                                                                            </template>
                                                                        </rows>
                                                                    </grid>
                                                                </vlayout>
															</hbox>

														</groupbox>
													</cell>
                                                    </row>
                                                    <!--</tabpanel>-->

                                                    <!--<tabpanel>-->
                                                    <!--Параметры-->
                                                    <row>
                                                        <cell colspan="2">

															<groupbox >
															<caption label="Параметры" />
																<hbox>
																	<vlayout>
																		<toolbar style="margin-bottom: -5px;">
																			<toolbarbutton image="/images/tollbar/document_add.png" tooltiptext="Добавить новый параметр" onClick='@command("onAddNewParamByList")' disabled="${(vm.level == 4) ? false : true}" />
																			<toolbarbutton image="/images/tollbar/edit.gif" tooltiptext="Добавить новый параметр, уже имеющий значение" onClick='@command("onAddOldParamByList")' disabled="${(vm.level == 4) ? false : true}" />
                                                                            <toolbarbutton image="/images/tollbar/add-button.png" tooltiptext="Добавить новый параметр" onClick='@command("onAddNewParam")' disabled="${(vm.level == 4) ? false : true}"  />
                                                                            <toolbarbutton image="/images/tollbar/graph2.png" tooltiptext="График параметров" onClick='@command("onShowChartParam")' />
                                                                        </toolbar>
																		<grid id="valuesParametrForProject1" model="@bind(vm.valModelList)" >
																			<columns>
																				<column hflex="1" label="Параметр" align="left" />
																				<column hflex="1" label="Значение" align="left" />
                                                                                <column hflex="1" label="Дата ввода параметра" align="left" />
																			</columns>
																			<rows>
																				<template name="model">
																					<row>
																						<label value="${each.getParametr().getName()}" />
                                                                                        <myTextBox obj="${each}" value="@bind(self.obj.value)" disabled="${(vm.level == 4) ? false : true}" />
                                                                                        <datebox value="${each.getDateRecValue()}" disabled="true" format="dd-MM-yy" />
																					</row>
																				</template>
																			</rows>
																		</grid>

																	</vlayout>
																</hbox>
															</groupbox>

                                                        </cell>
                                                    </row>
                                                    <!--</tabpanel>-->

                                                    <!--<tabpanel>-->
                                                    <!--ресурсы МЗ-->
                                                    <row>
                                                        <cell colspan="2">
															<groupbox >
															<caption label="Ресурсы Проекта" />
																<hbox>
																	<dualObjectListBox worker="WorkWithProviders" rightList="@bind(vm.providers)" disabled="${(vm.level == 4) ? false : true}"
                                                                                       id="resourcesProject1" load="true" />
																</hbox>

															</groupbox>
                                                        </cell>

                                                    </row>
                                                    <!--</tabpanel>-->

                                                    <!--</tabpanels>-->
                                               <!--</tabbox>-->

												</rows>
											</grid>

                                            <div style="margin: 20px 0;
                                                        padding: 15px 30px 15px 15px;
                                                        border-left: 5px solid #eee;background-color: #f0f7fd;
                                                        border-color: #d0e3f0; ">
                                                <label value="Файлы приложенные к заданию" />
                                                <button label="Добавить" image="/images/tollbar/attach.gif" >
                                                    <attribute name="onClick"><![CDATA[
                                                       vm.fileUpload();
                                                     ]]></attribute>
                                                        </button>

                                                <grid id="fileList" model="@bind(vm.fileModelList)">
                                                    <columns>
                                                        <column hflex="1" />
                                                    </columns>
                                                    <rows>
                                                        <template name="model">
                                                            <row>
                                                                    <cell>
                                                                        <buttonOpenList label="${each.getFile()}" obj="${each}" >
                                                                            <attribute name="onClick">   <![CDATA[
                                                                                com.PPU.windowControllers.FileController.downloadFile(self.getObj().getFile());
                                                                       ]]>  </attribute>
                                                                            </buttonOpenList>
                                                                    </cell>
                                                            </row>
                                                        </template>
                                                    </rows>
                                                </grid>

                                            </div>

                                            <hlayout>
                                                <button id="btn1" label="Сохранить" onClick='@command("onClickBtn1")' />
                                                <button id="btn2" label="${vm.nameNextLevel}" onClick='@command("onClickBtn2")' if='${!vm.nameNextLevel.equals("")}' />
                                                <button id="btn3" label="${vm.namePrevisLevel}" onClick='@command("onClickBtn3")' if='${!vm.namePrevisLevel.equals("")}' />
                                                <button id="btn4" label="Завершить работу над проектом" onClick='@command("onClickBtn4")' if='${((vm.level==4) &amp;&amp; (vm.project.status==4))}' />
                                                <button id="btn5" label="Закрыть задание" onClick='@command("onClickBtn5")' if='${(vm.level==2 || vm.level==3) &amp;&amp; vm.project.status==4}' />
                                            </hlayout>
                                        </panelchildren>
                                    </panel>


                                   </div>
                                </zk>
                            </vlayout>

                            <popup
                                    id="feedbackPopup"
                                    width="250px"
                                    height="50%"
                                    sclass="feedback"
                                    onOpen='@command("hideModal")' >
                                <include src="/pages/include/comment.zul"/>
                            </popup>

                        </div>
                        <!--  -->
                    </center>
                    <!--  -->

                    <!-- Contact Panel -->

                    <!--  -->
                </borderlayout>
                <!--  -->
            </center>
            <!--  -->
        </borderlayout>
        <!--  -->
    </window>
    <!--  -->
</zk>